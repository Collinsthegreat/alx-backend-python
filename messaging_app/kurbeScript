#!/bin/bash
# kurbeScript - Script to start Kubernetes locally with Minikube

# Exit on error
set -e

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install Minikube first."
    exit 1
fi
echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "ğŸ” Verifying cluster status..."
kubectl cluster-info

echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes local cluster is up and running!"
